<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Notes</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" >
        <div class="container-fluid">            
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("My Notes", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown"><a href="" class="dropdown-toggle" data-toggle="dropdown" role="button">General Studies 
                        <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Paper I", "Index", "Home")</li>
                        <li>@Html.ActionLink("Paper II", "Index", "Home")</li>
                        <li>@Html.ActionLink("Paper III", "Index", "Home")</li>
                        <li>@Html.ActionLink("Paper IV", "Index", "Home")</li>
                    </ul>                    
                    </li>
                    <li class="dropdown">
                        <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button">
                            Philosophy
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Paper I", "Index", "Home")</li>
                            <li>@Html.ActionLink("Paper II", "Index", "Home")</li>
                            
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Essay", "Index", "Home")</li>
                   
                    
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li style="padding-right:10px;"><button id="mainViewButton" type="button" class="btn btn-danger navbar-btn" disabled>View Mode</button></li>
                    <li style="padding-right:10px;"><button id="mainEditButton" type="button" class="btn btn-danger navbar-btn" >Edit Mode</button></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        
    </div>
    <footer class="container-fluid bottom">
        <p>&copy; @DateTime.Now.Year - My Notes</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
